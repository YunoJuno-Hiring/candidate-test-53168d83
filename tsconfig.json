{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@src": ["./"],
      "@components/*": ["./components/*"],
      "@mocks/*": ["./mocks/*"],
      "@custom-types/*": ["./types/*"]
    },
    "strict": true,
    "outDir": "public/",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES6",
    "lib": ["es2022", "dom"]
  }
}
